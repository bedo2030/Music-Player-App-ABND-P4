<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar xmlns:design="http://schemas.android.com/apk/res-auto"
        android:id="@+id/song_list_actionBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:layoutDirection="locale"
        design:titleTextColor="@color/actionBarTitle" />
    <ListView
        android:id="@+id/song_list"
        android:background="@color/mainActivityCategoryBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/list_divider"
        android:dividerHeight="5dp" />
</LinearLayout>